{
  "name": "keenmind.me",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "env:dev": "dotenv -e .dev.vars",
    "env:pro": "dotenv -e .pro.vars",
    "env": "bun run env:dev",
    "prisma:generate": "bunx prisma generate",
    "prisma:generate:no-engine": "bunx prisma generate --no-engine",
    "prisma:migrate": "bun run env -- prisma migrate dev",
    "prisma:push": "bun run env -- prisma db push",
    "prisma:reset": "bun run env:pro -- prisma migrate reset",
    "prisma:pull": "bun run env -- prisma db pull",
    "prisma:studio": "bun run env -- prisma studio",
    "generate:base": "tsx scripts/generate-routes.ts && tsx scripts/generate-db-client.ts",
    "generate:edge": "RUNTIME=edge bun run generate:base",
    "generate:node": "RUNTIME=nodejs bun run generate:base",
    "generate": "bun run generate:node",
    "clean": "rm -rf .next .wrangler .vercel",
    "dev:base": "next dev",
    "dev:node": "bun run db:switch node && bun run prisma:generate && bun run generate:node && bun run env -- bun run dev:base",
    "dev:edge": "bun run db:switch edge && bun run prisma:generate:no-engine && bun run generate:edge && bun run env -- bun run dev:base",
    "dev": "bun run dev:node",
    "build:analyze": "ANALYZE=true next build",
    "build:base": "bun run clean && bun run prisma:generate:no-engine",
    "build": "bun run build:base && bun run env:pro -- next build",
    "start": "bun run generate:node && bun run env -- next start",
    "pages:build": "bun run generate:edge && bunx @cloudflare/next-on-pages",
    "preview": "bun pages:build && wrangler pages dev",
    "deploy": "bun pages:build && wrangler pages deploy --commit-dirty=true",
    "dep": "bun run deploy",
    "lint": "next lint && bunx tsc --noEmit",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "tail": "wrangler pages deployment tail --project-name keenmind",
    "analyze": "bun run build:analyze",
    "db:switch": "bun scripts/switch-db-url.ts",
    "bun:dev": "bun scripts/switch-db-url.ts dev dev:node",
    "bun:dev:edge": "bun scripts/switch-db-url.ts edge dev:edge"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/pro-components": "^2.8.7",
    "@next/bundle-analyzer": "^15.2.4",
    "@prisma/adapter-pg": "^6.5.0",
    "@prisma/client": "^6.5.0",
    "@prisma/extension-accelerate": "^1.2.1",
    "@prisma/extension-optimize": "^1.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@types/lodash": "^4.17.16",
    "@types/pg": "^8.11.12",
    "@types/uuid": "^10.0.0",
    "antd": "^5.24.7",
    "class-variance-authority": "^0.7.1",
    "critters": "^0.0.25",
    "framer-motion": "^12.7.3",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "next": "14.2.26",
    "next-auth": "5.0.0-beta.20",
    "next-pwa": "^5.6.0",
    "pg": "^8.14.1",
    "react": "^18",
    "react-dom": "^18",
    "sonner": "^1.7.0",
    "tsx": "^4.19.2",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clsx": "^2.1.1",
    "eslint": "^8",
    "eslint-config-next": "15.3.0",
    "postcss": "^8",
    "prisma": "^6.5.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2",
    "vercel": "^39.1.2",
    "wrangler": "^4.10.0"
  }
}